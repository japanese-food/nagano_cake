<div class="container">
     <div class ="row" >
            <h1>商品一覧(全<%= Product.all.count %>件)</h1>
     </div>

      <div class="row">
         <div class="col-xs-12">
           <div class="col-sm-4">
            <% @products.each do |product| %>
            <span>
          <%= link_to product_path(product) do %>
                <%= image_tag product.get_image(200, 200) %>
          <% end %>
            </span>

            <span>
              <%= link_to product.name, product_path(product) %>
            </span>

            <span><%= number_to_currency(product.price, strip_insignificant_zeros: true, :unit => "￥")  %></span>



            <% end %>
            </div>
           </div>
      </div>
    
 
</div>