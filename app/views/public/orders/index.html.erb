 <h2>注文履歴一覧</h2>

    <table>

      <thead>
          <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払い金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
          </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
          <td>
              <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>

          <td><%= order.delivery_post_code %><%= order.delivery_address %><%= order.delivery_name %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.product.name %>
            <% end %>
          </td>
          <td><%= number_to_currency(order.billing_amount, strip_insignificant_zeros: true, :unit => "￥") %></td>

          <td><%= order.status_i18n %></td>
          <td><%= link_to "注文詳細", order_path(order) %></td>
          </tr>
        <% end %>
      </tbody>

    </table>

</div>
