<h2>注文情報入力</h2>

<h3>支払方法</h3>
<%= form_with model: @order, url: orders_check_path, method: :post, local: true do |f| %>

    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

    <h3>お届け先</h3>
    <div>
        <%= f.radio_button :address_number, 1 %>
        <%= f.label :address_number_1, "ご自身の住所" %>
        <%= @customer.address %>
    </div>

    <div>
      <%= f.radio_button :address_number, 2 %>
      <%= f.label :address_number_2, "登録済み住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(@addresses, :id, :address_display) %>
    </div>

    <div>
        <%= f.radio_button :address_number, 3 %>
        <%= f.label :address_number_2, "新しいお届け先" %>
        <%= f.text_field :delivery_post_code %>
        <%= f.text_field :delivery_address %>
        <%= f.text_field :delivery_name %>
    </div>

    <%= f.submit "確認画面へ進む" %>
<% end %>