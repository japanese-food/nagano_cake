<h2>注文情報入力</h2>


         <h3>支払方法</h3>
        <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
            <%= f.radio_button :payment_method, "credit_card" %>
            <%= f.label :payment_method, "クレジットカード" %>
            
            
            
            <%= f.radio_button :payment_method, "transfer" %>
            <%= f.label :payment_method, "銀行振込" %>
        
      <h3>お届け先</h3>
          <%= f.radio_button :delivery_address_number, 1 %> 
          <%= f.label :delivery_address_number_1, "ご自身の住所" %>
          <%= current_customer.customer_address %>
         
         
         
          <%= f.radio_button :delivery_address_number, 2 %>
          <%= f.label :delivery_address_number_2, "登録済み住所から選択" %>
          <%= f.collection_select(:registered, current_customer.addresses.all, :id, :address %>
         
         
       
          <%= f.radio_button :delivery_address_number, 3 %>
          <%= f.label :delivery_address_number_3, "新しいお届け先" %>
          
           <%= f.label :delivery_post_code, "郵便番号" %>
           <%= f.text_field :delivery_post_code %>
         
          <%= f.label :delivery_address, "住所" %>
          <%= f.text_field :delivery_address %>
          
          <%= f.label :delivery_address_name, "宛名" %>
          <%= f.text_field :delivery_address_name %>
          
          <%= f.submit "確認画面へ進む" %>
          
        <% end %>
        
         
       
          
        
         
         
        
    
        
    
        
