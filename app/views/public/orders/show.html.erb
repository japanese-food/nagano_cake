<h2>注文履歴詳細</h2>

<div>
    <h3>注文情報</h3>

     <table>
         <tr>
             <th>注文日</th>
             <td></td>
         </tr>
         <tr>
             <th>配送先</th>
             <td><%= @order.post_code %><br>
                 <%= @order.address %><br>
                 <%= @order.name %>
             </td>
         </tr>
         <tr>
             <th>支払方法</th>
             <td><%= @order.payment_method %></td>
         </tr>
         <tr>
             <th>ステータス</th>
             <td><%= @order.order_status %></td>
         </tr>
     </table>
</div>

<div>
    <h3>請求情報</h3>

        <table>
            <tr>
                <th>商品合計</th>
                <td><%= total_price(@order_details).to_s(:delimited) %></td>
            </tr>
            <tr>
                <th>配送料</th>
                <td><%= @order.postage.to_s(:delimited) %></td>
            </tr>
            <tr>
                <th>ご請求額</th>
                <td><%= @order.total_price.to_s(:delimited) %></td>
            </tr>
        </table>
</div>

<div>
    <table>

      <thead>
          <tr>
           <th>商品</th>
           <th>単価（税込）</th>
           <th>個数</th>
           <th>小計</th>
          </tr>
      </thead>

      <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
              <td><%= order_detail.product.name %></td>
              <td><%= tax_price(order_detail.product.tax_out_price).to_s(:delimited) %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= sub_price(order_detail).to_s(:delimited) %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
</div>