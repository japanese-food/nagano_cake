<div class="container">
    <div class ="row">
      <div class="col-xs-10">
          <h2>注文履歴詳細</h2>

                 <table>

                     <tr>
                         <th>購入者</th>
                         <td>
                            <%= @order.customer.sur_name %><%= @order.customer.first_name %>
                         </td>
                     </tr>
                     <tr>
                         <th>注文日</th>
                         <td> <%= @order.created_at.strftime('%Y/%m/%d')  %></td>
                     </tr>
                     <tr>
                         <th>配送先</th>
                         <td>
                             <%= @order.delivery_post_code %>
                             <%= @order.delivery_address %><br>
                             <%= @order.delivery_name %>
                         </td>
                     </tr>
                     <tr>
                         <th>支払方法</th>
                         <td> <%= @order.payment_method %></td>
                     </tr>
                     <tr>

                         <th>注文ステータス</th>
                         <td>
                            <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
                             <%= f.select :status, Order.statuses.keys %>
                             <%= f.submit "更新" %>
                            <% end %>
                         </td>
                     </tr>
                 </table>



                <table>
                    <thead>
                        <tr>
                            <th>商品名</th>
                            <th>単価（税込）</th>
                            <th>数量</th>
                            <th>小計</th>
                            <th>制作ステータス</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @order_details.each do |order_detail| %>
                        <tr>
                            <td><%= order_detail.product.name %></td>
                            <td><%= number_to_currency(order_detail.product.price, strip_insignificant_zeros: true, :unit => "￥") %></td>
                            <td><%= order_detail.amount %></td></td>
                            <td><%= number_to_currency(order_detail.subtotal, strip_insignificant_zeros: true, :unit => "￥") %></td>
                            <td>
                          <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch do |f| %>
                                <%= f.select :making_status, OrderDetail.making_statuses.keys %>
                                <%= f.submit "更新" %>
                          <% end %>
                            </td>
                      <% end %>
                        </tr>
                    </tbody>
                </table>

                <table>
                    <tr>
                      <th>商品合計</th>
                      <% @order_details.each do |order_detail| %>
                      <td><%= number_to_currency(@total_price += order_detail.subtotal, strip_insignificant_zeros: true, :unit => "￥") %></td>
                      <% end %>
                    </tr>
                    <tr>
                      <th>送料</th>
                      <td><%= number_to_currency(@order.postage, strip_insignificant_zeros: true, :unit => "￥")%></td>
                    </tr>
                    <tr>
                      <th>請求金額合計</th>
                      <td><%= number_to_currency(@total_price + @order.postage, strip_insignificant_zeros: true, :unit => "￥") %></td>
                    </tr>
            　　</table>
      </div>
   </div>
</div>