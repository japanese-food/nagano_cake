<div class ="row">
  <h2>注文履歴詳細</h2>

         <table>

             <tr>
                 <th>購入者</th>
                 <td>
                    <%= @order.customer.sur_name %><%= @order.customer.first_name %>
                 </td>
             </tr>
             <tr>
                 <th>注文日</th>
                 <td> <%= @order.created_at.strftime('%Y/%m/%d')  %></td>
             </tr>
             <tr>
                 <th>配送先</th>
                 <td>
                     <%= @order.delivery_post_code %>
                     <%= @order.delivery_address %><br>
                     <%= @order.delivery_name %>
                 </td>
             </tr>
             <tr>
                 <th>支払方法</th>
                 <td> <%= @order.payment_method %></td>
             </tr>
             <tr>

                 <th>注文ステータス</th>
                 <td>
                    <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
                     <%= f.select :status, Order.statuses.keys %>
                     <%= f.submit "更新" %>
                    <% end %>
                 </td>
             </tr>
         </table>



        <table>
            <thead>
                <tr>
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th>制作ステータス</th>
                </tr>
            </thead>
            <tbody>
              <% @order_details.each do |order_detail| %>
                <tr>
                    <td><%= order_detail.product.name %></td>
                    <td><%= order_detail.product.price %></td>
                    <td><%= order_detail.amount %></td></td>
                    <td><%= order_detail.subtotal %></td>
                    <td>
                  <%= form_with model: @order_details, url: admin_order_order_detail_path(@order_details), method: :patch do |f| %>
                        <%= f.select :making_status, OrderDetail.making_statuses.keys %>
                        <%= f.submit "更新" %>
                  <% end %>
                    </td>
              <% end %>
                </tr>
            </tbody>
        </table>

        <table>
            <tr>
              <th>商品合計</th>
              <% @order_details.each do |order_detail| %>
              <td><%= @total_price += order_detail.subtotal %></td>
              <% end %>
            </tr>
            <tr>
              <th>送料</th>
              <td><%= @order.postage%></td>
            </tr>
            <tr>
              <th>請求金額合計</th>
              <td><%= @total_price + @order.postage %></td>
            </tr>
    　　</table>
</div>