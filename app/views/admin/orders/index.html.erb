
<div class="container">
  <div class= "row" >
    <div class="col-xs-8">
      <h2>注文履歴一覧</h2>
    
        <table class="table">
          
          <thead>
              <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
              </tr>
          </thead>
          
          <tbody>
            <% @orders.each do |order| %>
              <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d')  %></td>
              <td><%= order.name %> </td>
              <td><%= order.order_details.amount %></td>
              <td><%= order.order_status %></td>
              </tr>
            <% end %>
          </tbody>
          
        </table>
    </div>  
  </div>

<div class= "row" >

  <h2>注文履歴一覧</h2>

    <table>

      <thead>
          <tr>
