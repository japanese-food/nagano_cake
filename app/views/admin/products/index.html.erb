<div class="container">

<h1>商品一覧</h1>

<%= link_to new_admin_product_path do %>
 <i class="fas fa-plus-circle"></i>
<% end %>

<table class="table">
   <thead class="table-light">
    <tr>
     <th>商品ID</th>
     <th>商品名</th>
     <th>税抜価格</th>
     <th>ジャンル</th>
     <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @products.each do |product| %>
   <tr>
    <td><%= product.id %></td>

    <td><%= link_to product.name, admin_product_path(product) %></td>

    <td><%= number_to_currency(product.price, strip_insignificant_zeros: true, :unit => "￥") %></td>

    <td><%= product.genre.name %></td>

    <td><% if product.sales_status %>
        <p class="text-success">販売中</p>
         <% elsif %>
        <p class="text-black-50">販売停止中</p>
        <% end %></td>
   </tr>
   <% end %>
  </tbody>

</table>
<%= paginate @products %>
</div>
