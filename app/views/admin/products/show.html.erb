<div class='container'>
  <div class='row'>
    <div class="col-xs-12">
      <h1>商品詳細</h1><br>

       <div class="col-xs-6">
           <div class="col-xs-4">
             <%= image_tag @product.get_image(200, 200) %>
           </div>
        
          <div class="field">
             <h4>商品名</h4>
             <p><%= @product.name %></p>
          </div>
        　<div class="field">
             <h4>商品説明</h4>
             <p><%= @product.caption %></p>
        　</div>
        　<div class="field">
             <h4>ジャンル</h4>
              <p><%= @product.genre.name %></p>
          </div>
        　<div class="field">
             <h4>税込価格</h4>
             <p><%= number_to_currency(@product.with_tax_price, strip_insignificant_zeros: true, :unit => "￥") %></p>
        
             <h6>（税抜価格）</h6>
             <p><%= number_to_currency(@product.price, strip_insignificant_zeros: true, :unit => "￥") %></p>
          </div>
        　<div class="field">
             <h4>販売ステータス</h4>
             <p><% if @product.sales_status %>
             <p class="text-success">販売中</p>
             <% elsif %>
             <p class="text-black-50">販売停止中</p>
             <% end %>
             </p>
          </div>
          <div class="field">
             <span><%= link_to "編集する",edit_admin_product_path(@product), class:"btn btn-success" %></span>
          </div>
      </div>
    </div>
  </div>
</div>
